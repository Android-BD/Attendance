        android:allowBackup="true"
        android:icon="@drawable/mdx_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="middlesex.attendance.ClassesActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="middlesex.attendance.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="middlesex.attendance.ModulesActivity"
            android:label="@string/title_activity_module" >
        </activity>
        <activity
            android:name="middlesex.attendance.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="middlesex.attendance.NewModuleActivity"
            android:label="@string/title_activity_new_module" >
        </activity>
        <activity
            android:name="middlesex.attendance.NewClassActivity"
            android:label="@string/title_activity_new_class" >
        </activity>
        <activity
            android:name="middlesex.attendance.NewStudentActivity"
            android:label="@string/title_activity_new_student" >
        </activity>
        <activity
            android:name="middlesex.attendance.ClassActivity"
            android:label="@string/title_activity_class" >
